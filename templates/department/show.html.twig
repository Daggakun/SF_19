{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>InhNum</th>
                <td>{{ department.inhNum }}</td>
            </tr>
            <tr>
                <th>ReaBeds</th>
                <td>{{ department.reaBeds }}</td>
            </tr>
        </tbody>
    </table>
    <canvas id="myChart"></canvas>
    <a href="{{ path('department_index') }}">back to list</a>

    <a href="{{ path('department_edit', {'id': department.id}) }}">edit</a>

    {{ include('department/_delete_form.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="/app/js/chart.js/dist/Chart.bundle.min.js"></script>
    <script type="text/javascript" src="/app/js/myChart.js"></script>
    <script type="text/javascript">
        $.post("{{ path('deptChart', {'deptId': department.id}) }}", function(data) {
            drawMyChart(data)
        })
    </script>

{% endblock %}
