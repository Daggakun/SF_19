{% extends 'base.html.twig' %}

{% block title %}CoVid Watcher{% endblock %}

{% block body %}
    <div class="container-fluid row mt-2" id="map-container">
        <div class="map col-7">
            Alternative content
        </div>
        <div class="row col-5 justify-content-center">
            <div class="areaLegend col-6"><span>Alternate Legend</span></div>
            <div class="plotLegend col-6"><span>Alternate Plots</span></div>
            <input type="range" min="1" max="52" value="1" class="slider col-11" id="weekNumSlider">
            <label for="weekNum col-1">Semaine: <span id="weekNumLabel"></span></label>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/app/js/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="/app/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/app/js/raphael/raphael.min.js" ></script>
    <script type="text/javascript" src="/app/js/jquery-mapael/js/jquery.mapael.min.js" ></script>
    <script type="text/javascript" src="/app/js/jquery-mapael/js/maps/france_departments.min.js" charset="utf-8"></script>
    <script type="text/javascript" src="/app/js/mapFr.js"></script>
    <script type="text/javascript">
        $.post('{{ path('jsonmap') }}', function(data){
            mapFr(data);
        });
    </script>
{% endblock %}
