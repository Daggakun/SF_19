{% extends 'base.html.twig' %}

{% block title %}Record index{% endblock %}

{% block body %}
    <h1>Record index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>WeekNum</th>
                <th>AsympCases</th>
                <th>SympCases</th>
                <th>ReaCases</th>
                <th>DeathCases</th>
                <th>Tests</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td>{{ record.id }}</td>
                <td>{{ record.weekNum }}</td>
                <td>{{ record.asympCases }}</td>
                <td>{{ record.sympCases }}</td>
                <td>{{ record.reaCases }}</td>
                <td>{{ record.deathCases }}</td>
                <td>{{ record.tests }}</td>
                <td>
                    <a href="{{ path('record_show', {'id': record.id}) }}">show</a>
                    <a href="{{ path('record_edit', {'id': record.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('record_new') }}">Create new</a>
{% endblock %}
